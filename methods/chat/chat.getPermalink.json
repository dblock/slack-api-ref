{
  "group": "chat",
  "name": "chat.getPermalink",
  "deprecated": false,
  "desc": "Retrieve a permalink URL for a specific extant message",
  "args": {
    "channel": {
      "required": true,
      "desc": "The ID of the conversation or channel containing the message.",
      "type": "channel"
    },
    "message_ts": {
      "required": true,
      "desc": "A message's `ts` value, uniquely identifying it within a channel.",
      "type": "string"
    }
  },
  "response": {
    "examples": [
      "{\n    \"ok\": true,\n    \"channel\": \"C123ABC456\",\n    \"permalink\": \"https://ghostbusters.slack.com/archives/C1H9RESGA/p135854651500008\"\n}",
      "{\n    \"ok\": true,\n    \"channel\": \"C123ABC456\",\n    \"permalink\": \"https://ghostbusters.slack.com/archives/C1H9RESGL/p135854651700023?thread_ts=1358546515.000008&cid=C1H9RESGL\"\n}",
      "{\n    \"ok\": false,\n    \"error\": \"channel_not_found\"\n}"
    ]
  },
  "errors": {
    "channel_not_found": "Value passed for `channel` was invalid.",
    "message_not_found": "The message identified by `message_ts` could not be found."
  }
}