{
  "group": "admin",
  "name": "admin.roles.listAssignments",
  "deprecated": false,
  "desc": "Lists assignments for all roles across entities. Options to scope results by any combination of roles or entities",
  "args": {
    "cursor": {
      "required": false,
      "example": "5c3e53d5",
      "desc": "Set cursor to next_cursor returned by the previous call to list items in the next page.",
      "type": "string"
    },
    "limit": {
      "required": false,
      "example": "50",
      "desc": "The maximum number of items to return. Must be between 1 - 200 both inclusive.",
      "type": "integer"
    },
    "role_ids": {
      "required": false,
      "example": "['Rl01', 'Rl0A']",
      "desc": "collection of role ids to scope results by.",
      "type": "array"
    },
    "entity_ids": {
      "required": false,
      "example": "['T12345', 'C12345']",
      "desc": "The entities for which the roles apply.",
      "type": "array"
    },
    "sort_dir": {
      "required": false,
      "example": "DESC",
      "desc": "Sort direction. Default is descending on date_create, can be either ASC or DESC.",
      "type": "string"
    }
  },
  "response": {
    "examples": [
      "{\n    \"ok\": true,\n    \"role_assignments\": [\n        {\n            \"role_id\": \"Rl0C\",\n            \"entity_id\": \"T123ABC456\",\n            \"user_id\": \"U123ABC456\",\n            \"date_create\": 1677038902\n        },\n        {\n            \"role_id\": \"Rl0C\",\n            \"entity_id\": \"T123ABC456\",\n            \"user_id\": \"U123ABC456\",\n            \"date_create\": 1677038902\n        },\n        {\n            \"role_id\": \"Rl0A\",\n            \"entity_id\": \"C123ABC456\",\n            \"user_id\": \"U123ABC456\",\n            \"date_create\": 1666624374\n        },\n        {\n            \"role_id\": \"Rl03\",\n            \"entity_id\": \"E123ABC456\",\n            \"user_id\": \"U123ABC456\",\n            \"date_create\": 1663617026\n        },\n        {\n            \"role_id\": \"Rl01\",\n            \"entity_id\": \"E123ABC456\",\n            \"user_id\": \"U123ABC456\",\n            \"date_create\": 1643231331\n        }\n    ],\n    \"response_metadata\": {\n        \"next_cursor\": \"dXNlcl9pZDozMDA1NjIwNTc0MjYyO2VudGl0eV90eXBlOjE7ZW50aXR5X2lkOjMwMDUxODcyMTczNjY7ZGF0ZV9jcmVhdGU6MTY0MzIzMTMzMQ==\"\n    }\n}",
      "{\n    \"ok\": false,\n    \"error\": \"invalid_actor\"\n}"
    ]
  },
  "errors": {
